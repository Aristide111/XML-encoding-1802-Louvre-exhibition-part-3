                  <sequence>
                     <elementRef key="country" minOccurs="0" maxOccurs="10"/>
                     <elementRef key="settlement" minOccurs="0" maxOccurs="10"/>
                     <elementRef key="repository" minOccurs="0" maxOccurs="10"/>
                     <elementRef key="departement" minOccurs="0" maxOccurs="10"/>
                     <elementRef key="idno" minOccurs="0" maxOccurs="1"/>
                  </sequence>
               </content>
               <exemplum>
               <egXML xmlns="http://www.tei-c.org/ns/Examples">
                  <msIdentifier>
                     <msIdentifier>
                        <country>France</country>
                        <settlement>Paris</settlement>
                        <repository>Bibliothèque Nationale de France</repository>
                        <departement>Manuscrits</departement>
                        <idno type="ark">ark:/12148/btv1b10527786q</idno>
                     </msIdentifier>
                  </msIdentifier>
               </egXML>
               </exemplum>
            </elementSpec>          
